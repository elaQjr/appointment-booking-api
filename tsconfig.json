{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "sourceMap": true
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules", "dist"]
}
